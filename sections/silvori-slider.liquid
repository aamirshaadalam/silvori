{{ 'silvori-slider.css' | asset_url | stylesheet_tag }}
<script src="{{ 'silvori-slider.js'| asset_url }}" defer></script>

{%- style -%}
  .section-{{ section.id }}-alignment {
      align-items: {{ section.settings.card_alignment }};
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    .btn-{{ section.id }}-color-scheme {
      color: {{ section.settings.color_scheme.settings.button_label }};
      background-color: {{ section.settings.color_scheme.settings.button }};
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
{%- endstyle -%}

<div class="slider-section section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  {%- for block in section.blocks -%}
    {% if block.type == 'heading' %}
      {%- unless block.settings.title == blank -%}
        <h2 class="title {{ block.settings.heading_size }} title-{{ block.settings.text_alignment }}">
          {{ block.settings.title }}
        </h2>
      {%- endunless -%}
    {%- endif -%}
  {%- endfor -%}
  <div class="slider">
    {% for block in section.blocks %}
      {% if block.type == 'slide' %}
        <div
          class="slider-item section-{{ section.id }}-alignment"
          link_url="{{ block.settings.slide_link | default: '#' }}"
        >
          {% if block.settings.slide_image %}
            <img
              src="{{ block.settings.slide_image | image_url: width: 600 }}"
              srcset="
                {{ block.settings.slide_image | image_url: width: 300 }} 300w,
                {{ block.settings.slide_image | image_url: width: 600 }} 600w,
                {{ block.settings.slide_image | image_url: width: 1200 }} 1200w
              "
              sizes="(min-width: 1280px) 20vw, (min-width: 1024px) 25vw, (min-width: 768px) 33.33vw, (min-width: 480px) 50vw,100vw"
              alt="{{ block.settings.slide_image.alt }}"
              width="100%"
              height="100%"
            >
          {% endif %}
          {% if block.settings.slide_header %}
            <span>{{ block.settings.slide_header }}</span>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="slider-controls">
    <button class="prev btn-{{ section.id }}-color-scheme">‹</button>
    <button class="next btn-{{ section.id }}-color-scheme">›</button>
  </div>
</div>

{% schema %}
{
  "name": "Silvori Slider",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "card_alignment",
      "label": "Card Alignment",
      "options": [
        { "value": "start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "end", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Small"
            },
            {
              "value": "h1",
              "label": "Medium"
            },
            {
              "value": "h0",
              "label": "Large"
            },
            {
              "value": "hxl",
              "label": "Extra Large"
            },
            {
              "value": "hxxl",
              "label": "Extra extra Large"
            }
          ],
          "default": "h1",
          "label": "Heading Size"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Heading Alignment",
          "options": [
            { "value": "start", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "end", "label": "Right" }
          ],
          "default": "center"
        }
      ]
    },
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Image"
        },
        {
          "type": "inline_richtext",
          "id": "slide_header",
          "label": "Header Text"
        },
        {
          "type": "url",
          "id": "slide_link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Silvori Slider"
    }
  ]
}
{% endschema %}
