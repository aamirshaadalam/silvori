<script src="{{ 'silvori-slider.js'| asset_url }}" defer></script>

{%- style -%}
  .section-{{ section.id }}-card-alignment {
      align-items: {{ section.settings.card_alignment }};
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    .title-align-{{ section.id }} {
      text-align: {{ section.settings.title_alignment }};
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
{%- endstyle -%}

<script>
  const sectionId = {{ section.id | json }}
</script>

{% comment %} SLIDER SECTION START {% endcomment %}
<div
  id="slider-section-{{ section.id }}"
  class="relative overflow-hidden w-full section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}"
>
  {%- unless section.settings.title == blank -%}
    {% comment %} TITLE START {% endcomment %}
    <h2 class="my-12 mx-20 {{ section.settings.title_size }} title-align-{{ section.id }}">
      {{ section.settings.title }}
    </h2>
    {% comment %} TITLE END {% endcomment %}
  {%- endunless -%}
  {% comment %} SLIDER START {% endcomment %}
  <div id="slider-{{ section.id }}" class="flex px-16 w-full">
    {%- for block in section.blocks -%}
      {% comment %} SLIDER ITEM START {% endcomment %}
      <div
        id="slider-item-{{ section.id }}"
        class="flex flex-col gap-4 w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5 flex-shrink-0 justify-center cursor-pointer section-{{ section.id }}-card-alignment"
        data-link="{{ block.settings.link | default: '#' }}"
      >
        {%- if block.settings.image -%}
          {% comment %} IMAGE CONTAINER {% endcomment %}
          <div class="relative flex flex-col aspect-3/4 shadow-md rounded-sm">
            {% comment %} IMAGE START {% endcomment %}
            <img
              class="object-cover w-full h-full rounded-sm"
              src="{{ block.settings.image | image_url: width: 600 }}"
              srcset="
                {{ block.settings.image | image_url: width: 300 }} 300w,
                {{ block.settings.image | image_url: width: 600 }} 600w,
                {{ block.settings.image | image_url: width: 1200 }} 1200w
              "
              sizes="(min-width: 1280px) 20vw, (min-width: 1024px) 25vw, (min-width: 768px) 33.33vw, (min-width: 480px) 50vw,100vw"
              alt="{{ block.settings.image.alt }}"
              width="100%"
              height="100%"
            >
            {% comment %} IMAGE END {% endcomment %}
            {% comment %} BADGE START {% endcomment %}
            {%- if block.settings.show_badge and block.settings.badge_label -%}
              {% style %}
                .badge-{{ block.id }}-color {
                  color: rgb({{ block.settings.badge_txt_color.rgb }});
                  background-color: rgb({{ block.settings.badge_bg_color.rgb }});
                }
              {% endstyle %}

              <span class="absolute bottom-[2%] left-[2%] text-base font-bold rounded-full py-3 px-5 badge-{{ block.id }}-color">
                {{- block.settings.badge_label -}}
              </span>
            {%- endif -%}
            {% comment %} BADGE END {% endcomment %}
          </div>
        {%- endif -%}
        {% comment %} IMAGE TITLE START {% endcomment %}
        {%- if block.settings.title -%}
          <span class="p-3">{{ block.settings.title }}</span>
        {%- endif -%}
        {% comment %} IMAGE TITLE END {% endcomment %}
      </div>
      {% comment %} SLIDER ITEM END {% endcomment %}
    {%- endfor -%}
  </div>
  {% comment %} SLIDER END {% endcomment %}
  {% comment %} SLIDER CONTROLS START {% endcomment %}
  <button
    id="btn-prev-{{ section.id }}"
    class="absolute top-[50%] border-none py-6 px-6 cursor-pointer btn-{{ section.id }}-color-scheme"
  >
    {% render 'sl-icon-chevron-left',
      stroke_width: '2.5',
      color: section.settings.color_scheme.settings.button,
      class: 'size-10 opacity-80'
    %}
  </button>
  <button
    id="btn-next-{{ section.id }}"
    class="absolute right-0 top-[50%] border-none py-6 px-6 cursor-pointer hidden btn-{{ section.id }}-color-scheme"
  >
    {% render 'sl-icon-chevron-right',
      stroke_width: '2.5',
      color: section.settings.color_scheme.settings.button,
      class: 'size-10 opacity-80'
    %}
  </button>
  {% comment %} SLIDER CONTROLS END {% endcomment %}
</div>
{% comment %} SLIDER SECTION END {% endcomment %}

{% schema %}
{
  "name": "Silvori Slider",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "select",
      "id": "title_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra Large"
        },
        {
          "value": "hxxl",
          "label": "Extra extra Large"
        }
      ],
      "default": "h1",
      "label": "Title Size"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Title Alignment",
      "options": [
        { "value": "start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "end", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "card_alignment",
      "label": "Card Alignment",
      "options": [
        { "value": "start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "end", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "URL"
        },
        {
          "type": "checkbox",
          "id": "show_badge",
          "label": "Show Badge",
          "default": false
        },
        {
          "type": "inline_richtext",
          "id": "badge_label",
          "label": "Badge Label"
        },
        {
          "type": "color",
          "id": "badge_bg_color",
          "label": "Badge Background",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "badge_txt_color",
          "label": "Badge Label",
          "default": "#ffffff"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Silvori Slider"
    }
  ]
}
{% endschema %}
