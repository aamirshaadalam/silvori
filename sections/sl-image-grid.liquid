{% schema %}
{
  "name": "SL Image Grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Our Featured Gallery"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Title Alignment",
      "default": "text-center",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_title",
          "label": "Image Title"
        },
        {
          "type": "url",
          "id": "image_link",
          "label": "Image Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SL Image Grid"
    }
  ]
}
{% endschema %}

<section class="py-16 w-full">
  <div class="w-full px-0">
    <!-- Section Title -->
    <h2 class="w-full text-5xl font-bold pt-12 uppercase text-black opacity-75 {{ section.settings.alignment }}">
      {{ section.settings.title }}
    </h2>

    <!-- Image Grid -->
    <div class="flex flex-wrap justify-center gap-4 p-8 w-full">
      {% for block in section.blocks %}
        <div class="group flex-grow flex-shrink basis-0 min-w-[200px] py-9">
          <!-- Image -->
          {% if block.settings.image %}
            <a href="{{ block.settings.image_link }}" class="block">
              <img
                src="{{ block.settings.image | image_url: width: 210, height:280  }}"
                alt="{{ block.settings.image_title }}"
                class="w-full h-full aspect-3/4"
                width="100%"
                height="100%"
              >
            </a>
          {% endif %}
          <!-- Image Title -->
          {% if block.settings.image_title %}
            <a
              href="{{ block.settings.image_link }}"
              class="block p-8 text-center text-2xl text-black opacity-75 uppercase font-semibold group-hover:underline"
            >
              {{ block.settings.image_title }}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
